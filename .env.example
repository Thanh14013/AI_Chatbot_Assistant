# Environment variables for Docker Compose
# This file is used by docker-compose.yml

# IMPORTANT: Add this file to .gitignore to avoid committing secrets!

# ===========================================
# REQUIRED: OpenAI Configuration
# ===========================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# Security: JWT Secrets
# ===========================================
# Generate random strings for production!
# Example: openssl rand -base64 64
JWT_SECRET=change-this-to-a-very-long-random-string-in-production
REFRESH_TOKEN_SECRET=change-this-to-another-very-long-random-string-in-production

# ===========================================
# OPTIONAL: Database Configuration
# ===========================================
# You can keep these values for development
# Change them for production
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=ai_chatbot_db

# ===========================================
# OPTIONAL: Redis Configuration
# ===========================================
REDIS_PASSWORD=redis123
