# Database connection used by the server when running in Docker
DB_HOST=db
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=thanh123
DB_NAME=chatbot

# Server bindings
PORT=3000

# OpenAI API Key - replace with your key or set as environment variable on host
OPENAI_API_KEY=your-openai-api-key-here

# Other optional flags
USE_SEMANTIC_CONTEXT=true
DISABLE_CONTEXT=false

# Build DATABASE_URL for Sequelize CLI and application
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
