# Environment variables for the client application
# IMPORTANT: For local development, use relative paths for VITE_API_BASE_URL
# The Vite dev server will proxy /api requests to the backend server

# Backend server URL (used only in production or for WebSocket connections)
VITE_BACKEND_URL=http://localhost:3000
NODE_ENV=development

# JWT Configuration
ACCESS_TOKEN_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=7d

# API Configuration
# In development: This is a relative path that uses Vite's proxy
# In production: This will be prefixed with VITE_BACKEND_URL
VITE_API_BASE_URL=/api
API_TIMEOUT=10000